{{! Law Faculty Profile Template }}
<div class="facultyProfileWrapper contentItem" id="{{contentId}}-fulltext" data-position-default="Main" data-position-selected="Main">  
    <div class="facultyProfileTop">
        <div class="standardContent row">

            <div class="facultyProfilePicture col-lg-4">
                {{#ifSet element="Profile Pic"}}
                    <div class="facultyPhoto">
                        {{embed layout="v9/media/faculty-profile-image"}}
                    </div>
                {{/ifSet}}
                <div class="clearfix"></div>
            </div> {{! end facultyProfilePicture }}

            {{! START profile header text }}
            <div class="facultyProfileInfo col-lg-8 flex-grow-1">
                <h1>{{publish element="Full Name"}}</h1>

                <div class="facultyProfileTitles">
                    <p>
                        {{#ifSet element="Primary Title" ~}}
                            {{publish element="Primary Title" ~}}<br>
                        {{/ifSet}}
                        {{#ifSet element="Secondary Title" ~}}
                            {{publish element="Secondary Title" ~}}<br>
                        {{/ifSet}}
                    </p>
                </div>

                <div class="facultyProfileContactInfo">
                    <div class="d-flex flex-column flex-xxl-row">
                        <p class="facultyProfileRoom me-xxl-5">
                            {{#ifSet element="Room" ~}}
                                <span class="fas fa-map-marker"></span>&nbsp;{{publish element="Room" ~}}
                            {{/ifSet}}
                        </p>
                        <p class="facultyProfilePhone me-xxl-5">
                            {{#ifSet element="Contact Phone" ~}}
                                <span class="fas fa-phone-alt"></span>&nbsp;{{publish element="Contact Phone" ~}}
                            {{/ifSet}}
                        </p>
                        <p class="facultyProfileEmail flex-grow-1">
                            {{#ifSet element="Email" ~}}
                                <span class="fas fa-envelope"></span>
                                <a class="emailAddress card-link"
                                    href="mailto:{{publish element="Email" ~}}?subject=From your Faculty Profile"
                                    title="Contact {{publish element="Full Name" ~}}">
                                    Email {{publish element="First Name" ~}}
                                </a>
                            {{/ifSet}}
                        </p>
                    </div> {{! end .d-flex }}
                </div> {{! end facultyProfileContactInfo}}

                <div class="clearfix"></div>
                <div class="d-flex flex-column flex-lg-row">
                    <div class="facultyProfileCV flex-grow-1 flex-lg-grow-0 cv-twitter">
                        {{#ifSet element="CV"}}
                            <span class="boxlinkItem">
                                <a href="{{{media id=(mediaId element="CV") layout="path/*"}}}" 
                                title="Download {{publish element="First Name"}} {{publish element="Last Name"}} Curriculum Vitae">
                                <span class="fas fa-download"></span> Curriculum Vitae
                                </a>
                            </span>
                        {{/ifSet}}
                    </div>

                    <div class="facultyProfileTwitter flex-grow-1 flex-lg-grow-0 cv-twitter">
                        {{#ifSet element="Twitter Handle" ~}}
                            <span class="boxlinkItem">
                                <a href="https://twitter.com/{{publish element="Twitter Handle" ~}}">
                                    <span class="fab fa-twitter"></span> {{publish element="Twitter Handle" ~}}
                                </a>
                            </span>
                        {{/ifSet}}
                    </div> {{! end facultyProfileTwitter }}
                </div> {{! end d-flex flex-lg-row }}
            </div> {{! facultyProfileInfo }}
            <div class="clearfix"></div>
            {{! END profile header text }}
        </div> {{! end .standardContent }}
    </div> {{! end .facultyProfileTop }}

    {{! start Law - Breadcrumbs }}
    <div class="standardContent row"> 
        <div id="breadcrumbsWrapper" class="container">
            <nav id="breadcrumbs" class="facultyProfileBreadcrumbs" aria-label="Breadcrumbs">
                {{nav id="739" name="Law - Breadcrumbs on Faculty Profile page"}}
            </nav>
        </div>
    </div> 
    {{! end Law - Breadcrumbs }}

    <div class="facultyProfileMiddle standardContent row">
        <div class="facultyProfileSidebar col-lg-4 order-1 order-lg-2">
            {{! start .primary-profile-sidebar / Areas of Expertise }}
            {{#ifSet element="Areas of Expertise" ~}}
                <div class="primary-profile-sidebar">
                    <h3>{{uppercase "Areas of Expertise"}}</h3>
                    {{{publish element="Areas of Expertise" ~}}}
                </div> {{! end .primary-profile-sidebar }}
            {{/ifSet}}

            <div class="secondary-profile-sidebar">
                {{#ifSet element="Education" ~}}
                    <h3>{{uppercase "Education"}}</h3>
                    {{{publish element="Education" ~}}}
                {{/ifSet}}

                {{#ifSet element="Affiliations" ~}}
                    <h3>{{uppercase "Affiliations"}}</h3>
                    {{{publish element="Affiliations" ~}}}
                {{/ifSet}}

                {{#ifSet element="Courses" ~}}
                    <h3>{{uppercase "Courses"}}</h3>
                    {{{publish element="Courses" ~}}}
                {{/ifSet}}
            </div> {{! end .secondary-profile-sidebar }}
        </div> {{! end .facultyProfileSidebar }}

        <div class="primaryProfileContent col-lg-8 order-2 order-lg-1 pe-lg-5">
            <div class="facultyProfileBiography">
                {{#ifSet element="Biography" ~}}
                    <h2>Biography</h2>
                    {{{publish element="Biography" ~}}}
                {{/ifSet}}
            </div> {{! end .facultyProfileBiography }}
            <div class="facultyProfilePublications">
                {{#ifSet element="Publications" ~}}                
                    <h2>Publications</h2>
                    {{{publish element="Publications" ~}}}
                {{/ifSet}}
            </div> {{! end .facultyProfilePublications }}
            <div class="facultyProfileActivity">
                {{#ifSet element="Activity" ~}}
                    <h2>Activity</h2>
                    {{{publish element="Activity" ~}}}
                {{/ifSet}}
            </div> {{! end .facultyProfileActivity }}
        </div> {{! end .primaryProfileContent }}
    </div> {{! end .facultyProfileMiddle }}
</div>{{! end .facultyProfileWrapper }}